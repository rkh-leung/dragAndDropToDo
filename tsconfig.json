{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es6",
      "es5",
      "dom.iterable",
      "scripthost"
      // APIs for the Windows Script Hosting System
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
//    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules"
    // would be the default
  ]
}